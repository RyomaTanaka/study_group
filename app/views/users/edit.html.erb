<h1 class="event_new_title">アカウント編集</h1>
<div class="form_conteiner">
  <div class="form_field">
    <div class="login_form">
      <%= form_with model: @user, method: :patch, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>

        <div class="field-first">
          <%= f.label :nickname, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.text_field :nickname, class: "text_field", placeholder: "例) テスト 太郎" %>
        </div> 

        <div class="field">
          <%= f.label :email, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field", placeholder: "例) test@gmail.com" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "field_label" %>
          <span class="require">必須</span>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "text_field", placeholder: "例) password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text_field", placeholder: "例) password" %>
        </div>

        <div class="field">
          <%= f.label :icon, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.file_field :icon, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :introduction, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.text_area :introduction, autocomplete: "new-password", class: "text_area", placeholder: "例) 〇〇です！よろしくお願いします！" %>
        </div>

        <div class="actions">
          <%= f.submit "変更する", class: "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>