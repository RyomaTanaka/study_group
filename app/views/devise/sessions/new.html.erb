<h1 class="event_new_title">ログイン</h1>
<div class="form_conteiner">
  <div class="form_field">
    <div class="login_form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field-first">
          <%= f.label :email, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field", id: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "field_label" %>
          <span class="require">必須</span>
          <%= f.password_field :password, autocomplete: "current-password", class: "text_field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "button" %>
        </div>
      <% end %>
      <%= render "test_login" %>
    </div>
  </div>
</div>
